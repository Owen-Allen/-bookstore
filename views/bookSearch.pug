script(src="client.js")
link(rel='stylesheet', href='style.css') 

header
    a(href="/insertBook")= `Book Insert Page`
    br
head
    p This is the test for the home page
    
body
    p Book List:
        p Search:
            input#searchConditionTitle(type="textbox")
            button#searchButton(type="button" onclick="searchByTitle()") Search for Books by Title

            input#searchConditionGenre(type="textbox")
            button#searchButton(type="button" onclick="searchByGenre()") Search for Books by Genre

            input#searchConditionAuthor(type="textbox")
            button#searchButton(type="button" onclick="searchByAuthor()") Search for Books by Author

            input#searchConditionMinPrice(type="textbox") Min Price
            input#searchConditionMaxPrice(type="textbox") Max Price
            button#searchButton(type="button" onclick="searchByPrice()") Search for Books by Price
    ul
        for row in rows
            li= `Title: ${row.title}, Genre: ${row.genre} ISBN: ${row.isbn}`
            a(href= `https://boppa-bat-bookstore.herokuapp.com/bookRedirect/${row.isbn}`) Link to specific book page
